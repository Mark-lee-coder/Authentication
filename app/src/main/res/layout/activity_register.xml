<?xml version="1.0" encoding="UTF-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    tools:context=".Register"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView android:layout_height="128dp"
        android:layout_width="132dp"
        tools:ignore="VectorDrawableCompat"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/imageView2"/>

    <TextView android:layout_height="49dp"
        android:layout_width="290dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/textView"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        android:textSize="24sp"
        android:text="Register"
        android:gravity="center_horizontal"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/etName"
        app:layout_constraintTop_toBottomOf="@id/textView"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:layout_marginHorizontal="50dp"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/etAge"
        app:layout_constraintTop_toBottomOf="@id/etName"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:inputType="textPersonName"
        android:hint="Age"
        android:ems="10"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="32dp"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" android:id="@+id/etEmail"
        app:layout_constraintTop_toBottomOf="@id/etAge"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:inputType="textEmailAddress"
        android:hint="Email address"
        android:ems="10"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="44dp"/>

    <EditText android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/etPassword"
        app:layout_constraintTop_toBottomOf="@id/etEmail"
        android:textSize="18sp"
        android:gravity="center_horizontal"
        android:inputType="textPassword"
        android:hint="Password" android:ems="10"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="56dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/button3"
        app:layout_constraintTop_toBottomOf="@id/etPassword"
        android:textSize="18sp"
        android:text="Register"
        android:layout_marginHorizontal="50dp"
        android:layout_marginTop="48dp"/>

    <Button android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/button4"
        app:layout_constraintTop_toBottomOf="@id/button3"
        android:textSize="18sp" android:text="Login"
        android:layout_marginTop="36dp"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintBottom_toBottomOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>